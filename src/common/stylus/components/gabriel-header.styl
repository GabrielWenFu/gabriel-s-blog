.gabriel-header
  height: 0.6rem
  font-size: 0
  text-align: center
  background: #e1dbcd
  div, img
    display: inline-block
    vertical-align: middle
  .gabriel-header-menu
    width: 0.26rem
    height: 0.22rem
    span  
      display: block
      height: 0.04rem
      background-color: #303030
      box-shadow: 0 0 0.04rem #43454a
      &:nth-of-type(2)
        margin: 0.05rem 0
  .gabriel-header-title
    font-size: 0.2rem
    font-weight: 600
    padding: 0.2rem 0.9rem
    color: #eb652d
  .gabriel-header-logo
    padding: 0.06rem
    img
      width: 0.48rem
      height: 0.48rem
      border-radius: 50%
